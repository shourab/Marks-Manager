

@model StudentResultHistoryFinder.Models.Course


@{
    ViewBag.Title = "SaveCourse";

    string msg = ViewBag.Message;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>NewCourseSave</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet"/>
    <style>
        label.error {
            color: red;
            font-style: italic;
        }
    </style>
</head>
<body>

    <br><br><br><br><br>
<div>


    <form class="form-horizontal" method="POST" id="saveNewCourseForm">

        <fieldset>
            <legend align="center">Add New Course</legend>

            <div class="form-group">
                <label for="CourseCode" class="col-sm-2 control-label">Course Code</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="CourseCode" name="CourseCode" placeholder="Course Code">
                </div>
            </div>
            <div class="form-group">
                <label for="CourseName" class="col-sm-2 control-label">Course Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="CourseName" name="CourseName" placeholder="Course Name">
                </div>
            </div>

            <div class="form-group">
                <label for="CourseCredit" class="col-sm-2 control-label">Course Credit</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="CourseCredit" name="CourseCredit" placeholder="Course Credit">
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Save</button>
                </div>
            </div>

        </fieldset>

        @if (msg != null)
        {
            if (msg.StartsWith("The"))
            {
                <div class="form-group">
                    <label for="CourseCode" class="col-sm-offset-3 col-sm-3 control-label label-danger">@ViewBag.Message</label>
                </div>
            }

            else if (msg.StartsWith("Course"))
            {
                <div class="form-group">
                    <label for="CourseCode" class="col-sm-offset-3 col-sm-3 control-label label-danger">@ViewBag.Message</label>
                </div>
            }

            else if (msg.StartsWith("New"))
            {
                <div class="form-group">
                    <label for="CourseCode" class="col-sm-offset-3 col-sm-3 control-label label-success">@ViewBag.Message</label>
                </div>
            }

            else
            {
                <div class="form-group">
                    <label for="CourseCode" class="col-sm-offset-3 col-sm-3 control-label label-danger">@ViewBag.Message</label>
                </div>
            }
        }
    </form>
</div>
</body>
</html>

@section scripts
{
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#saveNewCourseForm").validate({
                rules: {
                    CourseCode: "required",
                    CourseName: "required",
                    CourseCredit: {

                        required: true,
                        number: true
                    }


                },
                messages: {
                    CourseCode: "Please Provide Course Code",
                    CourseName: "Please Provide Course Name",
                    CourseCredit: {

                        required: "Please Provide Course Credit",
                        number: "Please Enter Only Numbers"
                    }


                }
            });
        });
    </script>

}