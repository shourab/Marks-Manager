@using StudentResultHistoryFinder.Models

@{
    ViewBag.Title = "ShowStudentInformation";

    List<StudentInformation> aInformation = ViewBag.studentSearch;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show Student Information</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        label.error {
            color: red;
            font-style: italic;
        }
    </style>
</head>
<body>

    <br><br><br><br><br>
<div>


    <form class="form-horizontal" method="POST" id="showStudentInformationForm">

        <fieldset>
            <legend align="center">Show Student Information</legend>

            <div class="form-group">
                <label for="StudentId" class="col-sm-2 control-label">Student Id</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="StudentId" name="StudentId" placeholder="Student Id">

                </div>
            </div>












            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Search</button>
                </div>
            </div>

            @if (aInformation != null)
            {
                if (aInformation.Count == 0)
                {
                    <div class="form-group">
                        <label for="showStudentInformationForm" class="col-sm-offset-3 col-sm-3 control-label label-danger">Sorry No One Found With This Id</label>
                    </div>
                }
                else
                {
                    <div>
                        <table class="table table-hover table-striped" id="showStudentInformation">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Id</th>
                                <th>Email</th>
                                <th>Blood Group</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (StudentInformation aStudentInformation in aInformation)
                            {
                                <tr>
                                    <td>@aStudentInformation.StudentName</td>
                                    <td>@aStudentInformation.StudentId</td>
                                    <td>@aStudentInformation.StudentEmail</td>
                                    <td>@aStudentInformation.BloodGroup</td>
                                </tr>
                            }
                            </tbody>
                        </table>


                    </div>


                }


            }


        </fieldset>



    </form>
</div>



</body>
</html>

@section scripts
{
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script>
        $(document).ready(function () {

            $("#showStudentInformationForm").validate({
                rules: {
                    StudentId: "required"
                    


                },

                messages:
                {
                    StudentId: "Please Provide Student Id",
                    
                }


            });


        


               

           

        });
    </script>
}


