@using StudentResultHistoryFinder.Models

@{
    ViewBag.Title = "ShowStudentRegistrationinParticularCourse";
    List<Course> courses = ViewBag.courses;
    List<EnrollCourse> enrollCourse = ViewBag.enrollCourses;
    List<BacklogRegistration> backlogEnrollCourse = ViewBag.backlogEnrollCourses;
    List<SelfStudyRegistration> selfStudyEnrollCourse = ViewBag.selfStudyEnrollCourses;
}

@section style
{

    <link href="~/Content/DataTables/css/jquery.dataTables.css" rel="stylesheet" />
}




<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NewCourseSave</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        label.error {
            color: red;
            font-style: italic;
        }
    </style>
</head>
<body>

    <br><br><br><br><br>
<div>


    <form class="form-horizontal" method="POST" id="showStudentRegistrationinParticularSubjectForm">

        <fieldset>
            <legend align="center">Show Student Registration in Specific Subject</legend>



            <div class="form-group">
                <label for="CourseId" class="col-sm-2 control-label">Course Code</label>
                <div class="col-sm-10">
                    <select class="form-control" id="CourseId" name="CourseId">
                        <option value="">--Select--</option>
                        @foreach (var course in courses)
                        {
                            <option value="@course.CourseId">@course.CourseCode</option>
                        }
                    </select>
                </div>
            </div>








            <div class="form-group">
                <label for="Batch" class="col-sm-2 control-label">Batch</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Batch" name="Batch" placeholder="Batch">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Search</button>
                </div>
            </div>

            @if (enrollCourse != null)
            {
                <div>
                    <table id="myTable" class="table table-hover table-striped">
                        <thead>
                        <tr>
                            <th>Student Id</th>
                            <th>Student Name</th>



                        </tr>
                        </thead>
                        <tbody>



                        @foreach (EnrollCourse aEnrollCourse in enrollCourse)
                        {
                            <tr>
                                <td>@aEnrollCourse.StudentId</td>
                                <td>@aEnrollCourse.StudentName</td>


                            </tr>
                        }


                        @foreach (BacklogRegistration aBacklogRegistration in backlogEnrollCourse)
                        {
                            <tr>
                                <td>@aBacklogRegistration.StudentId</td>
                                <td>@aBacklogRegistration.StudentName</td>


                            </tr>
                        }



                        @foreach (SelfStudyRegistration aSelfStudyRegistration in selfStudyEnrollCourse)
                        {
                            <tr>
                                <td>@aSelfStudyRegistration.StudentId</td>
                                <td>@aSelfStudyRegistration.StudentName</td>


                            </tr>
                        }


                        </tbody>

                    </table >


                </div>

            }





        </fieldset>




    </form>
</div>



</body>
</html>

@section scripts
{
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {

            $('#myTable').dataTable();
            $("#showStudentRegistrationinParticularSubjectForm").validate({
                rules: {
                   
                    CourseId: "required",
                    Batch: "required"


                },

                messages:
                {
                    
                    CourseId: "Please Provide Course Code",
                    Batch: "Please Provide Batch"
                }


            });


           

        });
    </script>
}